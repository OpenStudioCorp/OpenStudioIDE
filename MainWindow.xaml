<Window x:Class="OpenStudioIDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenStudioIDE" Height="450" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="Open_Click"/>
                <MenuItem Header="_Save" Click="Save_Click"/>
                <MenuItem Header="_code" Click="CheckCode_Click"/>
                <MenuItem Header="_build" Click="Build_Click"/>
                <Separator/>
                <MenuItem Header="_Exit" Click="Exit_Click"/>
            </MenuItem>
        </Menu> 
        <TextBox x:Name="txtEditor" TextWrapping="Wrap" AcceptsReturn="True"/>
    </DockPanel>
</Window> 
